<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetPictureActivity">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/roboto"
            android:text="And the final touch âœ¨"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/pink_900"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_Profile"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView_TapToChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap picture to change"
            android:visibility="invisible"
            android:textColor="@color/pink_900"
            app:layout_constraintEnd_toEndOf="@+id/imageView_Profile"
            app:layout_constraintTop_toBottomOf="@+id/imageView_Profile" />

        <Button
            android:id="@+id/button_Picture"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="32dp"
            android:text="Upload profile image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>